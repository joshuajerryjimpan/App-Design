<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp">

        <Button
            android:id="@+id/button6"
            android:layout_width="69dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:text="點我註冊"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/menu_sign"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button3"
            android:layout_width="117dp"
            android:layout_height="116dp"
            android:layout_marginTop="28dp"
            android:background="#AAAAAA"
            android:gravity="center"
            android:shape="oval"
            android:text="食品"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="117dp"
            android:layout_height="116dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="72dp"
            android:gravity="center"
            android:text="品牌衣物"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            tools:background="#8FBC8F" />

        <Button
            android:id="@+id/button2"
            android:layout_width="117dp"
            android:layout_height="116dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="72dp"
            android:background="#AAAAAA"
            android:gravity="center"
            android:text="3C產品"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/button1"
            android:layout_width="117dp"
            android:layout_height="116dp"
            android:layout_marginTop="76dp"
            android:background="#8FBC8F"
            android:gravity="center"
            android:text="生活用品"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="315dp"
            android:layout_height="34dp"
            android:layout_marginTop="96dp"
            android:text="代購商品資訊查詢平台"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/menu_login"
            android:layout_width="49dp"
            android:layout_height="52dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:srcCompat="@drawable/user_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/menu_sign"
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_login"
            app:srcCompat="@drawable/_0118e3531aa58b72c5536cf8e189182_512_437"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button5"
            android:layout_width="69dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:text="點我登入"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/menu_login"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="179dp"
            android:layout_height="220dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:srcCompat="@drawable/shopping" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="99dp"
            android:layout_height="57dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pic" />

        android:background="#8FBC8F"

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>